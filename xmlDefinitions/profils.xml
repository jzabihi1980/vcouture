    <mesure name="m_bassin">
      <tour name="m_tour_bassin">920</tour>
      <hauteur name="m_haut_bassin">1100</hauteur>
    </mesure>
    <mesure name="m_taille">
      <tour name="m_tour_taille">652</tour>
      <hauteur name="m_haut_taille">1200</hauteur>
    </mesure>
    <mesure name="m_poitrine">
      <tour name="m_tour_poitrine">920</tour>
      <hauteur name="m_haut_poitrine">1600</hauteur>
    </mesure>
    <mesure name="m_genoux">
